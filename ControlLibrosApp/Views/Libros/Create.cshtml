@model Entidad.Libro;

@{
    ViewData["Title"] = "Agregar Libro";
}

<h1>Agregar Libro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="TituloLibro" class="control-label">Titulo de Libro:</label>
                <input asp-for="TituloLibro" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción:</label>
                <input asp-for="Descripcion" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label">Autor de Libro:</label>
                <input asp-for="Autor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label">Genero Literario:</label>
                <input asp-for="Genero" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FechaPublicacion" class="control-label">Fecha de publicación:</label>
                <input asp-for="FechaPublicacion" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>
