@model Entidad.Libro;

@{
    ViewData["Title"] = "Detalles de Libro";
}

<h1>Detalles de Libro</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titulo de Libro:
        </dt>
        <dd class = "col-sm-10">
            @Model.TituloLibro
        </dd>
        <dt class = "col-sm-2">
            Descripción:
        </dt>
        <dd class = "col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class = "col-sm-2">
            Autor:
        </dt>
        <dd class = "col-sm-10">
            @Model.Autor
        </dd>
        <dt class = "col-sm-2">
            Genero Literario:
        </dt>
        <dd class = "col-sm-10">
            @Model.Genero
        </dd>
        <dt class = "col-sm-2">
            Fecha de Publicación:
        </dt>
        <dd class = "col-sm-10">
            @Model.FechaPublicacion
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdLibro">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
