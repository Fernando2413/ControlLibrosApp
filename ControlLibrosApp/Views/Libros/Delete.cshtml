@model Entidad.Libro;

@{
    ViewData["Title"] = "Eliminar Libro";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro de que deseas borrar este registro?</h3>
<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titulo de Libro:
        </dt>
        <dd class="col-sm-10">
            @Model.TituloLibro
        </dd>
        <dt class="col-sm-2">
            Descripción:
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Autor:
        </dt>
        <dd class="col-sm-10">
            @Model.Autor
        </dd>
        <dt class="col-sm-2">
            Genero Literario:
        </dt>
        <dd class="col-sm-10">
            @Model.Genero
        </dd>
        <dt class="col-sm-2">
            Fecha de Publicación:
        </dt>
        <dd class="col-sm-10">
            @Model.FechaPublicacion
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLibro" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
